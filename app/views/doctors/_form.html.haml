= simple_form_for @doctor, html: {multipart:true} do |f|
	- if @doctor.errors.any?
		#errors
			%h2
			= pluralize(@doctor.errors.count, "error")
			prevented this Doctor from saving
			%ul
				- @doctor.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :officename, input_html: {class: 'form-control'}

	.form-group
		= f.input :description, input_html: {class: 'form-control'}

	= f.button :submit, class: "btn btn-primary"